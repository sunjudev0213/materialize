mode cockroach

statement ok
CREATE TABLE foo (
    a int NOT NULL,
    b varchar,
    c decimal(13, 1)
)

statement ok
INSERT INTO foo (a, b, c) VALUES (5, 'this', -4.4), (3, 'just', 11.32), (-45, 'it', 10.28)

statement ok
CREATE INDEX foo_idx on foo(ascii(b));

statement ok
CREATE INDEX edge_columns on foo(a, floor(c));

statement ok
CREATE TABLE bar(x float, z char(5))

statement ok
INSERT into bar VALUES (1.3, 'onix'), (0, 'coop');

statement ok
CREATE INDEX bar_idx on bar(substr(z, 3))

