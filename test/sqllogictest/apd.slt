----
0.024

query T
SELECT ('0.12'::apd(39,1) * '0.2'::apd(39,2))::text;
----
0.020

query T
SELECT ('0.12'::apd * '0.2'::apd)::apd(39,3)::text;
----
0.024

query T
SELECT ('0.14'::apd * '0.2'::apd)::apd(39,2)::text;
----
0.03

